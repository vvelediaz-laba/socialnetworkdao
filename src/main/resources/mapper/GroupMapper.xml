<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.solvd.socialnetworkdao.GroupMapper">

    <resultMap id="groupResultMap" type="com.solvd.socialnetworkdao.Group">
        <id property="id" column="id"/>
        <result property="groupName" column="group_name"/>
        <result property="description" column="description"/>
        <collection property="groupMemberships" ofType="com.solvd.socialnetworkdao.GroupMembership"
                    resultMap="com.solvd.socialnetworkdao.mapper.GroupMembershipMapper.groupMembershipResultMap"/>
    </resultMap>

    <select id="getAllGroups" resultMap="groupResultMap">
        SELECT *
        FROM `Group`
    </select>

    <select id="getGroupById" resultMap="groupResultMap">
        SELECT G.id as id,
               G.group_name as group_name,
               GM.id as id,
               GM.role as role FROM `Group` G
        JOIN Group_Membership GM on G.id = GM.group_id
        WHERE G.id = #{id}
    </select>

    <insert id="insertGroup">
        INSERT INTO `Group` (id, group_name, description)
        VALUES (#{id}, #{groupName}, #{description})
    </insert>

    <update id="updateGroup">
        UPDATE `Group`
        SET group_name = #{groupName}, description = #{description}
        WHERE id = #{id}
    </update>

    <delete id="deleteGroup">
        DELETE FROM `Group`
        WHERE id = #{id}
    </delete>

</mapper>
